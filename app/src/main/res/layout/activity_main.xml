<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.xipu.dukeu.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewID"
        android:layout_width="411dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="172dp"/>

    <TextView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="450dp"
        android:onClick="getNextMessage"
        android:clickable="true"
        android:text="Next"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextButton"
        android:layout_alignEnd="@+id/nextButton"
        android:layout_alignRight="@+id/nextButton"
        android:layout_marginBottom="117dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="Interesting"/>

</android.widget.RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Gray"
    tools:context="com.xipu.dukeu.MainActivity">

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recyclerViewID"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:background="@drawable/chat_bubble"
        android:onClick="getNextMessage"
        android:text="Next"
        android:textIsSelectable="false"
        tools:layout_alignParentRight="false"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="293dp"/>

    <Button
        android:id="@+id/moreInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/nextButton"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="00dp"
        android:layout_toEndOf="@+id/nextButton"
        android:layout_toRightOf="@+id/nextButton"
        android:background="@drawable/chat_bubble"
        android:onClick="getMoreInfo"
        android:text="Tell me more"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:background="@color/Gray"
        android:overScrollMode="never"
        android:paddingBottom="80dp"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        tools:layout_editor_absoluteX="0dp">

    </android.support.v7.widget.RecyclerView>


</android.widget.RelativeLayout>
